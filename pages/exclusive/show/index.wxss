/*价格*/
.carts-price {
	color: #EF4933;
	font-size:36rpx;
}

/*人民币符号*/
.carts-price:before, .select-and-amount text:last-child:before {
	content: '￥';	
}

/*商品加减按钮*/
.reduce{
  width: 25%;
  padding-left:40rpx; 
  float:left;
  margin-top:20rpx;
  
}
.total{
  width:35%;
  float:left;
  font-size:28rpx;
  margin-top:28rpx;
}
.instantly{
  width:32%;
  float:right;
}
.total view{
  color:#EF4933;
  font-size: 36rpx;
  width: 170rpx;
  float:right;
  margin-top:-4rpx;
}
.instantly button{
  background: #EF4933;
  color:#FFF;
  border-radius: 0rpx;
}
/*stepper容器*/
.stepper {
	border: 1px solid #ccc;
	border-radius: 3px;
	width: 79px;
	height: 26px;

}

/*加号与减号*/
.stepper text {
	width: 22px;
	line-height: 26px;
	text-align: center;
	float: left;
}

/*数值*/
.stepper input {
	color: black;
	float: left;
	margin: 0 auto;
	width: 33px;
	height: 26px;
	text-align: center;
	font-size: 12px;
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
}