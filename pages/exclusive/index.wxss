.container{
  width:100%;
  height:100%;
}
.cate_box{
  width:100%;
}
.box_tit{
  margin-top: 80rpx;
  width:100%;
  position: relative;
  text-align: center;
  color:#999;
  font-size: 32rpx;
}
.box_tit::after{
  position: absolute;
  content: '';
  background: #d43d3d;
  width:30rpx;
  height:4rpx;
  margin-top:-20rpx;
  left:48%;
}
.box_pro{width:90%; border-bottom: 1px solid #F3F3F3;padding-bottom: 40rpx;margin:50rpx auto;height:180rpx;}
.pro_img{width:250rpx;height:180rpx;float:left;}
.pro_img image{width:100%;height:100%;}
.pro_content{width:57%;float:left;padding-left:40rpx;font-size:30rpx;text-align:justify;}
/*人民币符号*/
.pro_price:before {
	content: '￥';	
}
.pro_price{
  color:#EF4933;
  margin-top:20rpx;
}
.gold{
  position:relative;
  top:50rpx;
  font-size:20rpx;
  background:#de0b0b;
  color:#FFF;
  border-top-right-radius:20px;
  border-bottom-right-radius:20px;
  margin-top:-32rpx;
  width:96rpx;
  padding-left:10rpx;
  height:36rpx;
  line-height:36rpx;
  opacity: 0.8;
}